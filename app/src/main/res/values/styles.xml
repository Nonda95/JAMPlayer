<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AlertDialog.Light" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/background_light</item>
    </style>
    <style name="AppTheme.PopupMenu" parent="Base.Widget.AppCompat.PopupMenu.Overflow"/>

    <style name="Theme.Design.BottomSheetDialog.PlayingNow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginBottom">@dimen/bottom_sheet_margin</item>
        <item name="android:layout_marginTop">@dimen/bottom_sheet_margin</item>
        <item name="android:layout_marginLeft">@dimen/bottom_sheet_margin</item>
        <item name="android:layout_marginRight">@dimen/bottom_sheet_margin</item>
    </style>
</resources>
